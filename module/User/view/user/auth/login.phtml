     */
    
    $form->setAttribute('action', $this->url('sign-in'));
    $form->prepare();

?>

<div class="container">
    
    <div class="row">
        <div class="col-md-5 shadow-sm">
            <h3 class="mb-3 pt-2 text-md-center">
                <?= $this->escapeHtml($this->trad->_("Sign In")) ?>
            </h3>
            
            <?= $this->form()->openTag($form) ?>
            
            <span class="form-text text-muted pb-2">
                <?= sprintf( $this->trad->_("Don't have an account yet ? %sJoin here%s"),
                    '<a href="'.$this->url('sign-up').'">',"</a>"
                ) ?>
            </span>
            
