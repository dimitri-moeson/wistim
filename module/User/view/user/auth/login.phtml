            </div>
            
            <!-- password input field -->
            <div class="mb-3">
                <?= $this->formLabel($form->get('password'))?>
                <div class="form-group"><?= $this->formPassword($form->get('password'))?></div>
                <div class="text-danger"> <?= $this->formElementErrors($form->get('password'))?></div>
            </div>
            
